# Environment Configuration
# Copy this file to .env and fill in your API keys

# News API (newsapi.org)
NEWS_API_KEY=your_news_api_key_here

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=social_listening
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Webhook Configuration
WEBHOOK_URL=https://hooks.podhaprotocol.com/social-listening
WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring Settings
ALERT_EMAIL_RECIPIENTS=team@podhaprotocol.com,alerts@podhaprotocol.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Advanced Settings
DEBUG_MODE=false
LOG_LEVEL=info
DATA_RETENTION_DAYS=90

# Twitter Monitoring Configuration
TWITTER_COOKIE=your_twitter_auth_token_here
TWITTER_USERNAME=your_twitter_username_here
TWITTER_PASSWORD=your_twitter_password_here

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Twitter Monitoring Settings
TWITTER_MONITORING_ENABLED=true
TWITTER_SCRAPING_METHOD=nitter
TWITTER_MAX_TWEETS_PER_SEARCH=20
TWITTER_RATE_LIMIT_DELAY=2000
TWITTER_RETRY_ATTEMPTS=3

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Alternative Nitter Instances
NITTER_PRIMARY=https://nitter.net
NITTER_BACKUP1=https://nitter.it
NITTER_BACKUP2=https://nitter.42l.fr
NITTER_BACKUP3=https://nitter.pussthecat.org
